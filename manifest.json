{
  "manifest_version": 3,
  "name": "Shorten and undo closed URL  333 ",
  "version": "2.1.2",
  "description": "Shorten URLs & Restore closed tabs 短網址生成器 & 恢復已關閉分頁",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "scripting",
    "tabs",
    "sessions"
  ],
  "host_permissions": [
    "https://aiurl.tw/*",
    "https://glsoft.ai/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Short URL"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "libs/qrcode.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
