{
  "manifest_version": 3,
  "name": "Short URL Extension 333 ",
  "version": "1.1",
  "description": "Shorten URLs using cf worker API - DAVID888.com",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "scripting",
    "permissions"
  ],
  "host_permissions": [
    "https://aiurl.tw/*",
    "https://glsoft.ai/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Short URL"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
